    name: "Ayuntamiento"
  },
  {
    src: turismoColaboradorLogo.src,
    alt: "Turismo Santa Marta de Tormes",
    name: "Turismo Santa Marta"
  }
];

export interface Props {
  lang?: string;
}

const { lang = "es" } = Astro.props;

// Contenido bilingüe
const content = {
  es: {
    title: "Audioguías Murales Santa Marta",
