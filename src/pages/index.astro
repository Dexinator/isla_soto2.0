---
// Página principal - Audioguías Murales Santa Marta
// Navegación directa con tarjetas - Mobile First

import Layout from '../components/ui/Layout.astro';
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
import Card from '../components/ui/Card.astro';
import '../styles/global.css';

// Importar datos estáticos (para futuras funcionalidades)
// import muralsData from '../data/murals.json';
// import contentEs from '../data/content-es.json';
---

<Layout
  title="Audioguías Murales Santa Marta | Descubre el arte urbano accesible"
  description="Explora los murales de Santa Marta con audioguías accesibles. Versiones normativa, descriptiva, fácil y signoguía disponibles."
  lang="es"
>
  <Header currentPage="home" lang="es" />

  <main id="main-content" class="flex-1 bg-slate-50 dark:bg-slate-900">

    <!-- Controles flotantes: Idioma y Accesibilidad -->
    <div class="container mx-auto px-4 pt-6">
      <div class="flex justify-center">
        
        <!-- Controles combinados de idioma y accesibilidad -->
        <div class="bg-white dark:bg-slate-800 rounded-full shadow-lg border border-slate-200 dark:border-slate-700 p-2 flex items-center space-x-2">
          <!-- Selector de idioma -->
          <a
            href="/english"
            class="flex items-center text-slate-600 dark:text-slate-300 hover:text-SM-blue dark:hover:text-SM-blue px-3 py-2 rounded-full text-base font-medium transition-colors focus-visible border-r border-slate-200 dark:border-slate-700 pr-3 mr-1"
            aria-label="Switch to English"
          >
            <span class="mr-2">🇬🇧</span>
            <span>EN</span>
          </a>
          <!-- Controles de accesibilidad -->
          <!-- Modo claro -->
          <button 
            onclick="setLightMode()" 
            class="p-3 rounded-full hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors focus-visible"
            aria-label="Activar modo claro"
            title="Modo claro"
          >
            <span class="text-base">☀️</span>
          </button>
          
          <!-- Modo oscuro -->
          <button 
            onclick="setDarkMode()" 
            class="p-3 rounded-full hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors focus-visible"
            aria-label="Activar modo oscuro"
            title="Modo oscuro"
          >
            <span class="text-base">🌙</span>
          </button>
          
          <!-- Alto contraste -->
          <button 
            onclick="toggleHighContrast()" 
            class="p-3 rounded-full hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors focus-visible"
            aria-label="Activar/desactivar alto contraste"
            title="Alto contraste"
          >
            <svg xmlns="http://www.w3.org/2000/svg" shape-rendering="geometricPrecision" text-rendering="geometricPrecision" image-rendering="optimizeQuality" fill-rule="evenodd" clip-rule="evenodd" viewBox="0 0 512 508.47" class="w-5 h-5 fill-current">
              <path fill-rule="nonzero" d="M254.23 508.47c-3.94 0-7.87-.1-11.77-.28h-1.54v-.07c-64.9-3.34-123.37-31.04-166.45-74.12C28.46 387.99 0 324.42 0 254.23c0-70.19 28.46-133.75 74.47-179.76C117.55 31.39 176.03 3.69 240.92.34V.27h1.54c3.9-.18 7.83-.27 11.77-.27l3.46.02.08-.02c70.19 0 133.75 28.46 179.76 74.47 46 46.01 74.47 109.57 74.47 179.76S483.53 387.99 437.53 434c-46.01 46.01-109.57 74.47-179.76 74.47l-.08-.03-3.46.03zm-13.31-30.56V30.56C184.33 33.87 133.4 58.17 95.79 95.79c-40.55 40.54-65.62 96.56-65.62 158.44 0 61.89 25.07 117.91 65.62 158.45 37.61 37.61 88.54 61.91 145.13 65.23z"/>
            </svg>
          </button>
          
          <!-- Aumentar tamaño de fuente -->
          <button 
            onclick="adjustFontSize(1)" 
            class="px-3 py-3 rounded-full hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors focus-visible text-base font-bold"
            aria-label="Aumentar tamaño de texto"
            title="Texto más grande"
          >
            A+
          </button>
          
          <!-- Disminuir tamaño de fuente -->
          <button 
            onclick="adjustFontSize(-1)" 
            class="px-3 py-3 rounded-full hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors focus-visible text-base font-bold"
            aria-label="Disminuir tamaño de texto"
            title="Texto más pequeño"
          >
            A-
          </button>
        </div>
      </div>
    </div>

    <!-- Grid de Cards Principal -->
    <section class="py-6 md:py-8">
      <div class="container mx-auto px-4">

        <!-- Grid de audioguías - Mobile First -->
        <div class="grid grid-cols-2 gap-4 md:gap-6 max-w-4xl mx-auto">


          <!-- Audioguía Normativa -->
          <Card
            variant="square"
            title="Audioguía Normativa"
            description="Audio estándar con información completa"
            href="/audioguia-normativa"
            icon="🎧"
            badge="Estándar"
            badgeColor="blue"
            gradient="from-SM-yellow to-yellow-600"
            className="order-1"
          />

          <!-- Audioguía Fácil (primera opción, mismo tamaño) -->
          <Card
            variant="square"
            title="Audioguía Fácil"
            description="Audio adaptado para discapacidad intelectual"
            href="/audioguia-facil"
            icon="♿"
            badge="Recomendada"
            badgeColor="yellow"
            gradient="from-SM-blue to-blue-700"
            priority={true}
            className="order-2"
          />

          <!-- Audioguía Descriptiva -->
          <Card
            variant="square"
            title="Audioguía Descriptiva"
            description="Audio con descripciones detalladas"
            href="/audioguia-descriptiva"
            icon="📝"
            badge="Detallada"
            badgeColor="gray"
            gradient="from-SM-gray to-gray-600"
            className="order-3"
          />

          <!-- Signoguía -->
          <Card
            variant="square"
            title="Signoguía"
            description="Videos en lengua de signos española"
            href="/signoguia"
            icon="👋"
            badge="LSE"
            badgeColor="black"
            gradient="from-SM-black to-gray-800"
            className="order-4"
          />

          <!-- Mapa de la Ruta (tarjeta ancha) -->
          <Card
            variant="wide"
            title="Mapa de la Ruta"
            description="Recorrido completo por los murales de Santa Marta"
            href="#mapa"
            icon="🗺️"
            badge="Interactivo"
            badgeColor="blue"
            gradient="from-green-600 to-green-800"
            className="order-5"
          />
        </div>
      </div>
    </section>
  </main>

  <Footer lang="es" />
</Layout>


