---
// Página principal - Audioguías Murales Santa Marta
// Navegación directa con tarjetas - Mobile First

import Layout from '../components/ui/Layout.astro';
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
import Card from '../components/ui/Card.astro';
import MapCard from '../components/ui/MapCard.astro';
import '../styles/global.css';

// Importar imágenes de iconos para optimización
import iconAudioguiaNormativa from '../assets/images/icons/audioguia-normativa.jpg';
import iconAudioguiaFacil from '../assets/images/icons/audioguia-facil.jpg';
import iconAudioguiaDescriptiva from '../assets/images/icons/audioguia-descriptiva.jpg';
import iconSignoguia from '../assets/images/icons/signoguia.jpg';

// Importar datos para el mapa
import muralsData from '../data/murals.json';
const { murals, route } = muralsData;
---

<Layout
  title="Audioguías Murales Santa Marta | Descubre el arte urbano accesible"
  description="Explora los murales de Santa Marta con audioguías accesibles. Versiones normativa, descriptiva, fácil y signoguía disponibles."
  lang="es"
>
  <Header currentPage="home" lang="es" />

  <main id="main-content" class="flex-1 bg-slate-50 dark:bg-slate-900">

    <!-- Grid de Cards Principal -->
    <section class="py-6 md:py-8">
      <div class="container mx-auto px-4">

        <!-- Grid de audioguías - Mobile First -->
        <div class="grid grid-cols-2 gap-3 md:gap-6 max-w-4xl mx-auto">


          <!-- Audioguía Normativa -->
          <Card
            variant="square"
            title="Audioguía"
            description=""
            href="/audioguia-normativa"
            image={iconAudioguiaNormativa}
            imageAlt="Icono de la audioguía normativa - Ruta de los Murales Santa Marta"
            badge="Español"
            badgeColor="yellow"
            className="order-1"
          />

          <!-- Audioguía Fácil (primera opción, mismo tamaño) -->
          <Card
            variant="square"
            title="Audioguía Lectura Fácil"
            description=""
            href="/audioguia-facil"
            image={iconAudioguiaFacil}
            imageAlt="Icono de la audioguía de lectura fácil - Accesible para discapacidad intelectual"
            badge="LF"
            badgeColor="yellow"
            priority={true}
            className="order-2"
          />

          <!-- Audioguía Descriptiva -->
          <Card
            variant="square"
            title="Audioguía Descriptiva"
            description=""
            href="/audioguia-descriptiva"
            image={iconAudioguiaDescriptiva}
            imageAlt="Icono de la audioguía descriptiva con información detallada sobre los murales"
            badge="Detallada"
            badgeColor="yellow"
            className="order-3"
          />

          <!-- Signoguía -->
          <Card
            variant="square"
            title="Signoguía LSE"
            description=""
            href="/signoguia"
            image={iconSignoguia}
            imageAlt="Icono de la signoguía en lengua de signos española (LSE)"
            badge="Subtitulada"
            badgeColor="yellow"
            className="order-4"
          />

          <!-- Mapa de la Ruta (tarjeta ancha) -->
          <MapCard
            muralsData={murals}
            routeData={route}
            language="es"
            className="order-5"
          />
        </div>
      </div>
    </section>
  </main>

  <Footer lang="es" />
</Layout>


