---
// Página principal - Audioguías Murales Santa Marta
// Navegación directa con tarjetas - Mobile First

import Layout from '../components/ui/Layout.astro';
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
import Card from '../components/ui/Card.astro';
import '../styles/global.css';

// Importar datos estáticos (para futuras funcionalidades)
// import muralsData from '../data/murals.json';
// import contentEs from '../data/content-es.json';
---

<Layout
  title="Audioguías Murales Santa Marta | Descubre el arte urbano accesible"
  description="Explora los murales de Santa Marta con audioguías accesibles. Versiones normativa, descriptiva, fácil y signoguía disponibles."
  lang="es"
>
  <Header currentPage="home" lang="es" />

  <main id="main-content" class="flex-1 bg-slate-50 dark:bg-slate-900">

    <!-- Selector de idioma flotante -->
    <div class="container mx-auto px-4 pt-6">
      <div class="flex justify-center">
        <div class="bg-white dark:bg-slate-800 rounded-full shadow-lg border border-slate-200 dark:border-slate-700 p-2 flex items-center space-x-2">
          <!-- Español seleccionado -->
          <div class="flex items-center bg-SM-blue text-white px-3 py-2 rounded-full text-sm font-medium">
            <span class="mr-2">🇪🇸</span>
            <span>ES</span>
          </div>
          <!-- Inglés disponible -->
          <a
            href="/english"
            class="flex items-center text-slate-600 dark:text-slate-300 hover:text-SM-blue dark:hover:text-SM-blue px-3 py-2 rounded-full text-sm font-medium transition-colors focus-visible"
            aria-label="Switch to English"
          >
            <span class="mr-2">🇬🇧</span>
            <span>EN</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Grid de Cards Principal -->
    <section class="py-6 md:py-8">
      <div class="container mx-auto px-4">

        <!-- Grid de audioguías - Mobile First -->
        <div class="grid grid-cols-2 gap-4 md:gap-6 max-w-4xl mx-auto">

          <!-- Audioguía Fácil (primera opción, mismo tamaño) -->
          <Card
            variant="square"
            title="Audioguía Fácil"
            description="Audio adaptado para discapacidad intelectual"
            href="/audioguia-facil"
            icon="♿"
            badge="Recomendada"
            badgeColor="yellow"
            gradient="from-SM-blue to-blue-700"
            priority={true}
            className="order-1"
          />

          <!-- Audioguía Normativa -->
          <Card
            variant="square"
            title="Audioguía Normativa"
            description="Audio estándar con información completa"
            href="/audioguia-normativa"
            icon="🎧"
            badge="Estándar"
            badgeColor="blue"
            gradient="from-SM-yellow to-yellow-600"
            className="order-2"
          />

          <!-- Audioguía Descriptiva -->
          <Card
            variant="square"
            title="Audioguía Descriptiva"
            description="Audio con descripciones detalladas"
            href="/audioguia-descriptiva"
            icon="📝"
            badge="Detallada"
            badgeColor="gray"
            gradient="from-SM-gray to-gray-600"
            className="order-3"
          />

          <!-- Signoguía -->
          <Card
            variant="square"
            title="Signoguía"
            description="Videos en lengua de signos española"
            href="/signoguia"
            icon="👋"
            badge="LSE"
            badgeColor="black"
            gradient="from-SM-black to-gray-800"
            className="order-4"
          />

          <!-- Mapa de la Ruta (tarjeta ancha) -->
          <Card
            variant="wide"
            title="Mapa de la Ruta"
            description="Recorrido completo por los murales de Santa Marta"
            href="#mapa"
            icon="🗺️"
            badge="Interactivo"
            badgeColor="blue"
            gradient="from-green-600 to-green-800"
            className="order-5"
          />
        </div>
      </div>
    </section>
  </main>

  <Footer lang="es" />
</Layout>


