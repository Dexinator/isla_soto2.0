---
// Página principal - Audioguías Isla del Soto
// Navegación directa con tarjetas - Mobile First

import Layout from '../components/ui/Layout.astro';
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
import Card from '../components/ui/Card.astro';
import '../styles/global.css';

// Importar imágenes de iconos para optimización
import iconAudioguiaNormativa from '../assets/images/icons/audioguia-normativa.png';
import iconAudioguiaFacil from '../assets/images/icons/audioguia-facil.png';
import iconAudioguiaDescriptiva from '../assets/images/icons/audioguia-descriptiva.png';
import iconSignoguia from '../assets/images/icons/signoguia.png';
import iconAudioguiaEnglish from '../assets/images/icons/audioguia-english.png';
import iconFolleto from '../assets/images/icons/informativepdf.png';
---

<Layout
  title="Audioguías Isla del Soto | Descubre el patrimonio natural accesible"
  description="Explora la Isla del Soto en Santa Marta con audioguías accesibles. Versiones normativa, descriptiva, fácil y signoguía disponibles."
  lang="es"
>
  <Header currentPage="home" lang="es" />

  <main id="main-content" class="flex-1 bg-slate-50 dark:bg-slate-900">

    <!-- Grid de Cards Principal -->
    <section class="py-6 md:py-8">
      <div class="container mx-auto px-4">

        <!-- Grid de audioguías - Mobile First -->
        <div class="grid grid-cols-2 gap-3 md:gap-6 max-w-4xl mx-auto">


          <!-- Audioguía Normativa -->
          <Card
            variant="square"
            title="Audioguía"
            description=""
            href="/audioguia-normativa"
            image={iconAudioguiaNormativa}
            imageAlt="Audioguía en español - Ruta Isla del Soto"
            badge="Español"
            badgeColor="yellow"
            className="order-1"
          />

          <!-- Audioguía Fácil (primera opción, mismo tamaño) -->
          <Card
            variant="square"
            title="Audioguía Lectura Fácil"
            description=""
            href="/audioguia-facil"
            image={iconAudioguiaFacil}
            imageAlt="Audioguía de Lectura Fácil - Ruta Isla del Soto"
            badge="LF"
            badgeColor="yellow"
            priority={true}
            className="order-2"
          />

          <!-- Audioguía Descriptiva -->
          <Card
            variant="square"
            title="Audioguía Descriptiva"
            description=""
            href="/audioguia-descriptiva"
            image={iconAudioguiaDescriptiva}
            imageAlt="Audioguía Descriptiva y detallada - Ruta Isla del Soto"
            badge="Detallada"
            badgeColor="yellow"
            className="order-3"
          />

          <!-- Signoguía -->
          <Card
            variant="square"
            title="Signoguía LSE"
            description=""
            href="/signoguia"
            image={iconSignoguia}
            imageAlt="Signoguía en lengua de signos española con subtítulos - Ruta Isla del Soto"
            badge="Subtitulada"
            badgeColor="yellow"
            className="order-4"
          />

          <!-- Audio Guide English -->
          <Card
            variant="square"
            title="Audio Guide"
            description=""
            href="/english"
            image={iconAudioguiaEnglish}
            imageAlt="Audioguía en Inglés - Isla del Soto Route"
            badge="English"
            badgeColor="yellow"
            className="order-5"
          />

          <!-- Folleto -->
          <Card
            variant="square"
            title="Folleto"
            description=""
            href="/brochure/spanish.pdf"
            image={iconFolleto}
            imageAlt="Descargar folleto - Ruta Isla del Soto"
            badge="Descargar"
            badgeColor="yellow"
            className="order-6"
          />
        </div>
      </div>
    </section>
  </main>

  <Footer lang="es" />
</Layout>


